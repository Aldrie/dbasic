{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
	  "outDir": "build",
	  "declaration": true,
	  "declarationMap": true,
	  "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["**/src/**/*.ts"],
  "exclude": ["**/test/**", "**/build/**"]
}
